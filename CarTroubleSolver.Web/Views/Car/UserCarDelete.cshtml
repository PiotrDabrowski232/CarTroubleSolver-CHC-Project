@model IEnumerable<CarTroubleSolver.Logic.Dto.Cars.CarDto>

@{
    ViewBag.Title = "User Car Delete";
}

<div class="container mt-5">

    <table class="table table-bordered table-striped mx-auto w-75">
        <thead class="thead-dark">
            <tr>
                <th class ="text-center">Brand</th>
                <th class ="text-center">CarModels</th>
                <th class="text-center">Mileage</th>
                <th class="text-center">Color</th>
                <th class="text-center">FuelType</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td class="text-center">@car.Brand</td>
                    <td class="text-center">@car.CarModels</td>
                    <td class="text-center">@car.Mileage</td>
                    <td class="text-center">@car.Color</td>
                    <td class="text-center">@car.FuelType</td>
                    <td class="text-center">
                        <form asp-controller="Car" asp-action="DeleteCar" method="post">
                            <input type="hidden" name="Brand" value="@car.Brand" />
                            <input type="hidden" name="CarModels" value="@car.CarModels" />
                            <input type="hidden" name="Mileage" value="@car.Mileage" />
                            <input type="hidden" name="Color" value="@car.Color" />
                            <input type="hidden" name="FuelType" value="@car.FuelType" />
                            <input type="hidden" name="DoorCount" value="@car.DoorCount" />
                            <input type="hidden" name="EngineType" value="@car.EngineType" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
